<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">
    <ProgressBar
        android:id="@+id/add_contact_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/phone_contact_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_white_with_shadow">
        <EditText
            android:id="@+id/phone_contact_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пошук..."
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_contact_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_contact_search_container">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
